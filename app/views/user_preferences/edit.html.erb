<%= render "shared/errors", obj: @preferences %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Edit your Preferences</h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for @preferences, url: preferences_path, html: {class: "form-horizontal", role: "form"} do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-6">
              <%= f.label "Use real name as display name (defualt is user name)" %><br>
            </div>
            <div class="form-check-box col-sm-6">
              <%= f.check_box :use_real_name %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-6">
              <%= f.label "Make profile private" %><br>
            </div>
            <div class="form-check-box col-sm-6">
              <%= f.check_box :profile_private %>
            </div>
          </div>
          <hr>
          <div class="form-group">
            <div class="col-sm-6 right">
              <%= f.submit "Update preferences", class: "btn btn-primary" %>
            </div>
            <div class="col-sm-6">
              <%= link_to "Restore preferences to default", preferences_path, method: :delete, data: {confirm: "Are you sure you want to restore your preferences to default?"}, class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
        <div align="center">[ <%= link_to "Cancel", user_profile_path(current_user) %> ]</div>
      </div>
    </div>
  </div>
</div>
