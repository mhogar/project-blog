<% if user_signed_in? && current_user.id == project.user.id %>
  <div class="project-actions">
    <%= link_to "Edit", edit_project_path(project), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete", project_path(project), method: :delete, data: {confirm: "Are you sure you want to delete the project?"}, class: "btn btn-xs btn-danger" %>
  </div>
<% end %>