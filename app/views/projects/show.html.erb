<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-4">
        <h3 class="project-title"><%= @project.name %></h3>
      </div>
      <div class="col-md-4 col-md-offset-4 repo-link">
        <%= icon('fas', 'cloud') %> <strong>Repo:</strong> <%= link_to "#{@project.repo_link}", @project.repo_link %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="project-description">
      <%= markdown(@project.description) %>
    </div>
    <% if @project.languages.any? %>
      <hr><p>Languages: <%= render @project.languages %></p>
    <% end %>
    <%= render 'project_actions', project: @project %>
    <div class="center">[ <%= link_to 'Back to listing', user_projects_path(@project.user) %> ]</div>
  </div>
</div>